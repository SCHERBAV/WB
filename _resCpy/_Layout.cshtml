<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebPrj</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <!--Подключение скриптов-->
    <script src="lib/jquery/dist/jquery.js"></script>
    <script src="lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <style>
        #nb{
            height: 20px;
        }
    </style>

    <header>
        <!--Контейнер-->
        <div class="container">
            <!-- Панель навигации -->
            <nav class="navbar navbar-expand-md navbar-dark bg-dark">
                <!-- меню сайта -->
                <a class="navbar-brand" href="#">903328_Щерба Вадим</a>
                <div class="navbar-nav">
                    <a class="nav-item nav-link active" asp-controller="Home" asp-action="Index">Lab_2</a>
                    <a class="nav-item nav-link" asp-controller="Product" asp-action="Index">Каталог</a>
                    <a class="nav-item nav-link" asp-area="Admin" asp-page="/Index">Администрирование</a>
                </div>
                <!-- меню сайта - конец -->

                <!-- Информация пользователя -->
                <a asp-controller="Cart" asp-action="Index" class="navbar-text mlauto">
                    0.0 руб
                    <i class="fas fa-shopping-cart nav-color"></i>
                    (0)
                </a>
                <div class="dropdown ml-4 nav-color">
                    <div class="dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
                         aria-expanded="false">
                        <img src="images/User.png" width="30" alt="User" class="rounded" />
                    </div>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <div class="dropdown-item-text">
                            <img src="images/User.png" width="50" alt="User" class="rounded" />
                            user@gmail.com
                        </div>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" asp-controller="Product" asp-action="UserProducts" aspaction="Index">My goods</a>
                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout">Log off</a>
                    </div>
                </div>
                <!-- Информация пользователя - конец -->
            </nav>
            <!-- Панель навигации - конец -->
        </div><!-- container - конец -->
    </header><!-- header - конец -->

    <!--Содержимое страницы-->
    <main class="container">
        @RenderBody();
    </main>

    <!--Подвал страницы-->
    <footer class="fixed-bottom">
        <div class="navbar navbar-dark navbar-expand-md bg-dark" id="nb">
            <div class="navbar-nav ml-auto">
                <a class="nav-item nav-link" href="http://www.facebook.com">
                    <i class="fab fa-facebook-f fa-1x"></i>
                </a>
                <a class="nav-item nav-link" href="http://www.vk.com">
                    <i class="fab fa-vk fa-1x"></i>
                </a>
                <a class="nav-item nav-link" href="http://www.twitter.com">
                    <i class="fab fa-twitter fa-1x"></i>
                </a>
            </div>
        </div>
    </footer>
    <!-- Панель навигации - конец -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
