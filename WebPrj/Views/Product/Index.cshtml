@model IEnumerable<Laptop>

@{
    ViewData["Title"] = "Каталог";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="card-deck">
        @foreach (var item in Model)
        {
            <div class="card m-2 p-1 text-center col-5">
                <img src="~/Images/@item.Image" alt="NoImage" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">@item.producer.ProducerName<br>@item.Model</h5>
                    <p class="card-text">@item.Processor</p>
                    <p class="card-text">RAM - @item.RAM</p>
                    <p class="card-text">@item.Graphics</p>
                    @if (string.IsNullOrEmpty(item.SSD) != true)
                    {
                        <p class="card-text">SSD - @item.SSD</p>
                    }
                    @if (string.IsNullOrEmpty(item.HDD) != true)
                    {
                        <p class="card-text">HDD - @item.HDD</p>
                    }

                    <div class="card-text badge badge-secondary">
                        <h6>@item.Price $</h6>
                    </div>
                    @{
                        //получение текущего адреса
                        var request = ViewContext.HttpContext.Request;
                        var returnUrl = request.Path + request.QueryString.ToUriComponent();
                    }
                    <!--Разметка кнопки добавления в корзину-->
                    <p class="mt-2">
                        <a asp-action="Add" asp-controller="Cart" asp-route-id="@item.LaptopId" asp-route-returnUrl="@returnUrl" class="btn btn-primary">
                            <i class="fa fa-shopping-cart"></i>
                            В корзину
                        </a>
                    </p>
                </div>
            </div>
        }
    </div>
</div>


